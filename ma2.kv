#:kivy 1.10.0

<TrackWidget>:
    canvas:

<PatternWidget>:
    canvas:

#<SongViewWidget>:

<Widget>:
    font_name: 'RobotoMono-Regular'
    font_size: dp(17)

<Ma2Widget>:

    theTrkWidget: thisTrkWidget
    thePtnWidget: thisPtnWidget
    
    btnTitle:     btnTitleID
    btnTrkInfo:   btnTrkInfoID
    btnModPtn:    btnModPtnID
    btnModStart:  btnModStartID
    btnModTransp: btnModTranspID
    btnPtnTitle:  btnPtnTitleID
    btnPtnInfo:   btnPtnInfoID
    btnNotePitch: btnNotePitchID
    btnNoteOn:    btnNoteOnID
    btnNoteLen:   btnNoteLenID
    btnNoteVel:   btnNoteVelID

    BoxLayout:
        orientation: "vertical"
        size: root.size        
        
        BoxLayout:
            orientation: "horizontal"
            height: root.height * 0.05
            size_hint_y: None
            
            Button:
                id: btnTitleID
                on_press: root.pressTitle()
            Button:
                on_press: root.pressTrkAdd()
                text: 'TRK +'
            Button:
                on_press: root.pressTrkDel()
                text: 'TRK -'
            Button:
                id: btnTrkInfoID
                on_press: root.pressTrkInfo()
                text: 'TRK Info (Name, Inst, Transpose)'
                    
        TrackWidget:
            id: thisTrkWidget
        
        BoxLayout:
            orientation: "horizontal"
            height: root.height * 0.05
            size_hint_y: None
            Button:
                on_press: root.pressModAdd()
                text: "MOD +"
            Button:
                on_press: root.pressModDel()
                text: "MOD -"
            Button:
                id: btnModPtnID
                on_press: root.pressModPtn()
                text: "MOD: PAT?"
            Button:
                id: btnModStartID
                on_press: root.pressModStart()
                text: "MOD: STRT?"
            Button:
                id: btnModTranspID
                on_press: root.pressModTransp()
                text: "MOD: PITCH?"
            
        BoxLayout:
            orientation: "horizontal"
            height: root.height * 0.05
            size_hint_y: None
            Button:
                on_press: root.pressPtnLast()
                text: "<"
                size_hint_x: 0.15
            Button:        
                id: btnPtnTitleID
                on_press: root.pressPtnTitle()
                text: "PATTERN: bad performance"
            Button:
                on_press: root.pressPtnNext()
                text: ">"
                size_hint_x: 0.15
            Button:
                on_press: root.pressPtnAdd()
                text: "PAT +"
            Button:
                on_press: root.pressPtnDel()
                text: "PAT -"
            Button:
                id: btnPtnInfoID
                on_press: root.pressPtnInfo()
                text: "PAT LEN (Beats)"

        PatternWidget:
            id: thisPtnWidget
            
        BoxLayout:
            orientation: "horizontal"
            height: root.height * 0.05
            size_hint_y: None
            Button:
                on_press: root.pressNoteAdd()
                text: "NOTE +"
            Button:
                on_press: root.pressNoteDel()
                text: "NOTE -"
            Button:
                id: btnNotePitchID
                on_press: root.pressNotePitch()
                text: "NOTE PITCH (or Drum)"
            Button:
                id: btnNoteOnID
                on_press: root.pressNoteOn()
                text: "NOTE ON"
            Button:
                id: btnNoteLenID
                on_press: root.pressNoteLen()
                text: "NOTE LEN"
            Button:
                id: btnNoteVelID
                on_press: root.pressNoteVel()
                text: "NOTE VEL"

        BoxLayout:
            orientation: "horizontal"
            height: root.height * 0.05
            size_hint_y: None
            Button:
                on_press: root.pressLoadCSV()
                text: "Load .ma2"
            Button:
                on_press: root.pressSaveCSV()
                text: "Save .ma2"
            Button:
                on_press: root.pressBuildCode()
                text: "Export GLSL"
#           Button:
#               text: "Import GLSL"

        
#Widget:
    #Ma2Widget:
        #size: root.size
